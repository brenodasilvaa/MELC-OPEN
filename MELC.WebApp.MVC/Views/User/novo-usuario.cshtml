@using MELC.WebApp.MVC.Extensions

<div id="modalPlaceHolder">
    <div class="modal fade" id="novoUser" data-coreui-backdrop="static" data-coreui-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropAlert" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div id="novoUserModalContent" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropAlert">Cadastrar usuário</h5>
                    <button id="btnClose" type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div id="dlgNewUser" class="modal-body">
                        <form>
                            <div class="input-group mb-3">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                                    </svg>
                                </span>
                                <input id="fullName" name="FullName" class="form-control" type="text" placeholder="Nome completo">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                                    </svg>
                                </span>
                                <input id="userName" name="UserName" class="form-control" placeholder="Usuário">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-lock-locked"></use>
                                    </svg>
                                </span>
                                <input id="senha" name="Senha" class="form-control" type="password" placeholder="Senha">
                            </div>
                            <div class="input-group mb-4">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-lock-locked"></use>
                                    </svg>
                                </span>
                                <input id="senhaConfirmacao" name="SenhaConfirmacao" class="form-control" type="password" placeholder="Confirme sua senha">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-text">
                                    <input id="isAdmin" name="IsAdmin" class="form-check-input" type="checkbox" value="false">
                                </div>
                                <input type="text" disabled class="form-control" placeholder="Usuario administrador">
                            </div>
                        </form>
                    <button onclick="melc.usuarios.inserirUsuario()" id="btnNewUser" class="btn btn-block btn-primary">Criar usuário</button>
                </div>
            </div>
        </div>
    </div>
</div>

