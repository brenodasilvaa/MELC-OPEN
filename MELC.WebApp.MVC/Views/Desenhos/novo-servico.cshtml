@using MELC.Core.DomainObjects.Dtos
@using MELC.WebApp.MVC.Models.Desenhos
@model NewDesenhoServicoViewModel

<div id="modalNovoServicoPlaceholder">
    <div class="modal fade" id="novoservico" data-coreui-backdrop="static" data-coreui-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropAlert" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropAlert">Cadastrar serviço</h5>
                    <button id="btnClose" type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div id="dlgNewServico" class="modal-body">
                    <form class="row g-3">
                        <input hidden id="desenhoId" value="@Model.DesenhoId" />
                        <div class="col-mg-3">
                            <label for="servico" class="form-label">Serviço</label>
                            <select id="tiposervico" class="form-select">
                                <option value="" selected>Selecione um serviço</option>
                            </select>
                        </div>
                        <div class="col-mg-3">
                            <label for="horas" class="form-label">Horas</label>
                            <input value="0" type="time" class="form-control" id="horas" min="0">
                        </div>
                    </form>
                    <button style="margin-top:1rem" onclick="melc.desenhoDetalhe.inserirNovoServico()" id="novoServicoBtn" class="btn btn-block btn-primary ">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>
